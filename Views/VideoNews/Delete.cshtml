@model Devdiscourse.Models.VideoNewsModels.VideoNews

@{
    ViewBag.Title = "Delete video News";
    Layout = "~/Views/Shared/_Layout _plain.cshtml";
    var domainUrl = "https://www.devdiscourse.com";
}
<link href="~/Content/admin.css" rel="stylesheet" />
<div class="bg-white p-20">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Admin</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "DevNews")">DevNews</a></li>
        <li class="breadcrumb-item active">Delete</li>
    </ol>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AlternateHeadline)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AlternateHeadline)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.Raw(Model.Description)
            </dd>

            <dt>
                Sector
            </dt>

            <dd>
                @if (Model.VideoNewsSectors != null)
                {
                    @foreach (var sec in Model.VideoNewsSectors)
                    {
                        <span class="badge">@sec?.DevSectors?.Title</span>
                    }
                }
            </dd>
            <dt>
                Edition
            </dt>

            <dd>
                @if (Model.VideoNewsRegions != null)
                {
                    @foreach (var ed in Model.VideoNewsRegions)
                    {
                        <span class="badge">@ed?.Edition?.Title</span>
                    }
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Country)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Country)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.VideoThumbUrl)
            </dt>

            <dd>
                @{
                    var newsImage = $"/Experiment/Img?imageUrl={Model.VideoThumbUrl}";
                }
                <img src="@newsImage&width=640" class="img-responsive" />
            </dd>

            <dt>
                Tags
            </dt>
            <dd>
                @if (Model.VideoNewsTags != null)
                {
                    @foreach (var sec in Model.VideoNewsTags)
                    {
                        <span class="badge">@sec?.Tagstb?.TagTitle</span>
                    }
                }
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedOn)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ModifiedOn)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
    </div>
</div>