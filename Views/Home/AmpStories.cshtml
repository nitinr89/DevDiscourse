@{
    Layout = null;
    ViewBag.Title = "Devdiscourse stories";
    string domainUrl = "https://www.devdiscourse.com";
    ViewBag.PageDescription = "Daily News, Development News, Sustainable Development, Energy, Economy, Finance, Transport, Education, Digital Development,Industry, Agro-Forestry, Social Protection,Public Administration, Water and Sanitation, Health News";
    string imageUrl = "/AdminFiles/Logo/devediscourse_banner.png";
    ViewBag.webEdition = ViewBag.region;
    ViewBag.PostUrl = "https://www.devdiscourse.com/Home/AmpStories";
    ViewBag.pageKeywords = "News, Devdiscourse stories, Breaking News";
    var newsImage = imageUrl.IndexOf("devdiscourse.blob.core.windows.net") != -1 ? imageUrl : string.Concat(domainUrl, imageUrl);
    ViewBag.PageImage = newsImage;
    int storyIndex = 1;
}
<!doctype html>
<html amp lang="en">
<head>
    <meta charset="utf-8">
    <link rel="preload" as="script" href="https://cdn.ampproject.org/v0.js">
    <link rel="preload" as="script" href="https://cdn.ampproject.org/v0/amp-story-1.0.js">
    <script async src="https://cdn.ampproject.org/v0.js"></script>
    <script async custom-element="amp-story" src="https://cdn.ampproject.org/v0/amp-story-1.0.js"></script>
    <script async custom-element="amp-analytics" src="https://cdn.ampproject.org/v0/amp-analytics-0.1.js"></script>
    <title>Top Stories - Devdiscourse</title>
    <link rel="canonical" href="https://www.devdiscourse.com/top-stories" />
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">
    <meta property="og:title" content="Top Stories - Devdiscourse" />
    <meta property="og:description" content="Get Top Stories on Devdiscourse" />
    <meta property="og:image" content="https://www.devdiscourse.com/AdminFiles/Logo/devediscourse_banner.png" />
    <meta property="og:site_name" content="Devdiscourse" />
    <meta property="fb:app_id" content="253802031818293" />
    <meta property="fb:pages" content="317536492049394" />
    <style amp-boilerplate>
        body {
            -webkit-animation: -amp-start 8s steps(1,end) 0s 1 normal both;
            -moz-animation: -amp-start 8s steps(1,end) 0s 1 normal both;
            -ms-animation: -amp-start 8s steps(1,end) 0s 1 normal both;
            animation: -amp-start 8s steps(1,end) 0s 1 normal both
        }

        @@-webkit-keyframes -amp-start {
            from {
                visibility: hidden
            }

            to {
                visibility: visible
            }
        }

        @@-moz-keyframes -amp-start {
            from {
                visibility: hidden
            }

            to {
                visibility: visible
            }
        }

        @@-ms-keyframes -amp-start {
            from {
                visibility: hidden
            }

            to {
                visibility: visible
            }
        }

        @@-o-keyframes -amp-start {
            from {
                visibility: hidden
            }

            to {
                visibility: visible
            }
        }

        @@keyframes -amp-start {
            from {
                visibility: hidden
            }

            to {
                visibility: visible
            }
        }</style>
    <noscript>
        <style amp-boilerplate>
            body {
                -webkit-animation: none;
                -moz-animation: none;
                -ms-animation: none;
                animation: none
            }</style>
    </noscript>
    <style amp-custom>
        :after, :before {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box
        }

        body {
            font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
            font-size: 1rem;
            font-weight: 300;
            line-height: 1.5;
            color: #212529
        }

        .story-title {
            font-weight: 500;
            font-size: 1.7rem;
            padding-top: 7px;
            line-height: 2.2rem;
            text-shadow: 0 1rem 3rem rgba(0,0,0,.175)
        }

        .story-body {
            padding: 0 10px
        }

        amp-story-page * {
            color: white
        }

        [template=thirds] {
            padding: 10px
        }

        [template=vertical] {
            padding: 0
        }

        .story-tag {
            background-color: #222;
            color: #fff;
            padding: 1px 7px 4px 7px;
            border-radius: 2px
        }

        .text-center {
            text-align: center
        }

        .no-text-decoration {
            text-decoration: none
        }

        amp-story-page {
            padding: 0
        }

        amp-story-cta-layer {
            padding-top: 60px
        }</style>
</head>
@model IEnumerable<Devdiscourse.Models.ViewModel.LatestNewsView>
<body>
    <amp-story standalone
               title="Stories on Devdiscourse"
               publisher="Devdiscourse"
               publisher-logo-src="https://www.devdiscourse.com/images/icons/devdiscourse_logo_min.png"
               poster-portrait-src="https://www.devdiscourse.com/AdminFiles/Logo/devediscourse_banner.png?width=696&height=928&bgcolor=f6f6f6&anchor=bottom"
               poster-square-src="https://www.devdiscourse.com/AdminFiles/Logo/devediscourse_banner.png?width=928&height=928&bgcolor=f6f6f6&anchor=bottom"
               poster-landscape-src="https://www.devdiscourse.com/AdminFiles/Logo/devediscourse_banner.png?width=928&height=696&bgcolor=f6f6f6&anchor=bottom">
        @foreach (var item in Model)
        {
            var storyNewsImage = $"/Experiment/Img?imageUrl={item.ImageUrl}";
            <amp-story-page id="page-@storyIndex" auto-advance-after="5s">
                <amp-story-grid-layer template="vertical" position="landscape-half-left">
                    <div>
                        <amp-img class="story_img" src="@domainUrl@storyNewsImage&width=360&height=380&mode=crop"
                                 width="360"
                                 height="380"
                                 layout="responsive">
                        </amp-img>
                    </div>
                    <div class="story-body">
                        @if (!string.IsNullOrEmpty(item.Country))
                        {
                            var country = item.Country.Split(','); foreach (var cou in country.Take(1))
                            {
                                <span class="story-tag" animate-in="fly-in-left">@cou.ToUpper()</span>
                            }
                        }
                        else
                        {
                            <span class="story-tag" animate-in="fly-in-left">GLOBAL</span>
                        }
                        <h1 animate-in="fly-in-left" class="story-title">@item.Title</h1>
                    </div>
                </amp-story-grid-layer>
                @if (storyIndex != 1)
                {
                    <amp-story-cta-layer>
                        <a href="@Url.RouteUrl("ArticleDetailswithprefix", new { prefix = item.Label ?? "agency-wire", id = item.GenerateSecondSlug() })?amp" class="button no-text-decoration">
                            <div class="text-center">
                                <amp-img src="/images/icons/chevron_up.svg" width="15" height="15"></amp-img>
                            </div>
                            <div class="text-center">Read Article!</div>
                        </a>
                    </amp-story-cta-layer>
                }
                @{
                    storyIndex++;
                }
            </amp-story-page>
        }
        <amp-analytics type="googleanalytics" id="google_analytics">
            <script type="application/json">
                {
                "vars": {
                "account": "UA-123167123-1"
                },
                "triggers": {
                "track pageview": {
                "on": "visible",
                "request": "pageview",
                "vars": {
                "title": "Devdiscourse Infocus",
                "ampdocurl": "https://www.devdiscourse.com/Home/AmpStories"
                }
                }
                }
                }
            </script>
        </amp-analytics>
        <amp-analytics type="alexametrics">
            <script type="application/json">
                {"vars": { "atrk_acct": "VE/Iq19jYF20V1", "domain": "devdiscourse.com" }}
            </script>
        </amp-analytics>
        <amp-story-bookend src="/api/Search/AmpInfocusMore" layout="nodisplay"></amp-story-bookend>
    </amp-story>

</body>
</html>


