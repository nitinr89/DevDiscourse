    }

    .custom-input {
        border-color: #fff;
        border-radius: 1px !important;
    }

    .btn-submit {
        outline: none;
        border-top-right-radius: 1px !important;
        border-bottom-right-radius: 1px !important;
        color: #fff !important;
        background-color: #050ae0;
        font-family: 'oswald';
    }

        .btn-submit:active, .btn-submit:hover {
            background-color: #6c6ff8;
        }

    .sign_petition {
        font-size: 4.2rem;
