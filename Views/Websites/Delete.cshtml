@model Devdiscourse.Models.Website

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout _plain.cshtml";
}
<link href="~/Content/admin.css" rel="stylesheet" />
<div class="container bg-white m-t-10 m-b-10 p-b-10 p-t-10">
    <ol class="breadcrumb no-margin">
        <li class="breadcrumb-item"><a href="@Url.Action("Media", "Admin")">Admin</a></li>
        @if (Model.Type == "Website")
        {
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Websites")">Website</a></li>
        }
        else
        {
            <li class="breadcrumb-item"><a href="@Url.Action("PressRelease", "Websites")">Press Release</a></li>
        }
        <li class="breadcrumb-item active">Delete</li>
    </ol>
</div>
<div class="container bg-white m-b-10">
    <h4>Are you sure you want to delete this?</h4>
    <div class="p-20">
        @if (Model.Type == "Website")
        {

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Regions.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Regions.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Country)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Country)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.SiteUrl)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SiteUrl)
                </dd>

            </dl>
        }
        else
        {

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.PressRelease)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PressRelease)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PressReleaseUrl)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PressReleaseUrl)
                </dd>

            </dl>
        }
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
