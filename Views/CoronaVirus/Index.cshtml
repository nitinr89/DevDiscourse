@{
    ViewBag.Title = "Knowing is Life: Let us fight COVID 19, our invisible enemy - Devdiscourse";
    ViewBag.alternateHeadline = "Knowing is Life: Let us fight COVID 19, our invisible enemy";
    string domainUrl = "https://www.devdiscourse.com";
    string imageUrl = "/images/Campaign/corona/cororna_virus_campaign_card.jpg";
    ViewBag.PageDescription = "A Global Communication Campaign to help you in protecting your family and community from COVID 19 infection and emerge as a pandemic resilience society.";
    ViewBag.webEdition = ViewBag.region;
    ViewBag.PostUrl = "https://www.devdiscourse.com/";
    ViewBag.pageKeywords = "COVID 19, Corona Virus, Corona, Global Communication Campaign, pandemic";
    var newsImage = imageUrl.IndexOf("devdiscourse.blob.core.windows.net") != -1 ? imageUrl : string.Concat(domainUrl, imageUrl);
    ViewBag.PageImage = newsImage + "?width=960";
}
