    }

    .panel-default > .panel-heading {
        background-color: #fff;
    }

    .fg-color {
        color: #050ae0;
    }

    .bg-orange {
        background-color: #050ae0;
    }

    .b-b-white {
        border-bottom: 35px solid #fff;
    }

    .fg-secondary {
        color: #f3f580
    }

    #NewsSector {
        box-shadow: 0px 9px 18px 0 rgba(89, 81, 69, 0.05);
    }

    .main-section {
