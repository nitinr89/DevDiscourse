@using Devdiscourse.Models;
@using X.PagedList
@model IPagedList<Devdiscourse.Models.BasicModels.Job>
@using X.PagedList.Mvc.Core
@{
    IPagedList<Devdiscourse.Models.BasicModels.Job> model = Model;
}
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout _plain.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<link href="~/Content/admin.css" rel="stylesheet" />
<div class="container bg-white m-t-10 m-b-10 p-b-10 p-t-10">
    <ol class="breadcrumb no-margin">
        <li class="breadcrumb-item"><a href="@Url.Action("AdminView", "Admin")">Admin</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Jobs")">Jobs</a></li>
        <li class="breadcrumb-item active"><a href="@Url.Action("Create", "Jobs")">Create New</a></li>
    </ol>
</div>
<div class="container bg-white p-20">
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Organization</th>
            <th>Location</th>
            <th>EmailId</th>
            <th>Opening Date</th>
            <th>Closing Date</th>
            <th>Keywords</th>
            <th>CTC</th>
            <th>No. of Vacancies</th>
            <th>Experience</th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrganizationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpeningDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClosingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Keywords)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinCTC) - @Html.DisplayFor(modelItem => item.MaxCTC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vacancy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinExperience) - @Html.DisplayFor(modelItem => item.MaxExperience) Years
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
    <div class="panel-footer" style="padding-top: 20px; background-color: transparent; border-top: none;">
        <small>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</small>
        @Html.PagedListPager(Model, page => Url.Action("Index", "Jobs", new { page }))
    </div>
</div>