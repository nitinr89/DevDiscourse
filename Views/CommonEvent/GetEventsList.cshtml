@model IEnumerable<Devdiscourse.Models.Others.CommonEvent>

@{
    ViewBag.Title = "Events";
}
<link href="~/Content/jquery.multiselect.css" rel="stylesheet" />
<link href="~/Content/PagedList.css" rel="stylesheet" />
<link href="~/Content/admin.css" rel="stylesheet" />
<style>


</style>

<div class="container">

    <h2 class="text-primary" >Events</h2>

    <div class="container bg-white m-t-10 m-b-10 p-b-10 p-t-10">
        <ol class="breadcrumb no-margin">
            <li style="font-family:sans-serif;" class="breadcrumb-item">@Html.ActionLink("Create New", "Create")</li>
        </ol>
    </div>

    <div class="container bg-white p-20">
        <table class="table table-responsive" style="font-family:sans-serif;" >
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EventTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EventVenue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
             
                <th>
                    @Html.DisplayNameFor(model => model.AddressRegion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AddressCountry)
                </th>               
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.Featured)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventVenue)
                    </td>                
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>                  
                    <td>
                        @Html.DisplayFor(modelItem => item.AddressRegion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddressCountry)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>                  
                    <td>
                        @Html.DisplayFor(modelItem => item.Featured)
                    </td>
                    <td>
                         <a href="@Url.Action("Edit", "CommonEvent", new { id = item.Id })" class="btn btn-xs btn-success" target="_blank" title="Edit"><span class="fa fa-pencil"></span></a> 
                        <a href="@Url.Action("Details", "CommonEvent", new { id = item.Id })" class="btn btn-xs btn-success" target="_blank" title="Details"><span class="fa fa-eye"></span></a> 
                        <a href="@Url.Action("Delete", "CommonEvent", new { id = item.Id })" class="btn btn-xs btn-success" target="_blank" title="Delete"><span class="fa fa-trash"></span></a>
                    </td>
                </tr>
            }

        </table>
    </div>

  


</div>

