@{
    Layout = "~/Views/Shared/_ampLayout.cshtml";
    ViewBag.Title = "Global Development News | Blogs | Research";
    string domainUrl = "https://www.devdiscourse.com";
    string imageUrl = "/AdminFiles/Logo/devediscourse_banner.png";
    ViewBag.PageDescription = "Devdiscourse provides international development news. Get todays Headline from Economy, Transport, Energy, Digital Development, WASH, Health, Technology, Art and culture, Urban Development, live news coverage across the world";
    ViewBag.webEdition = ViewBag.edition;
    ViewBag.PostUrl = "https://www.devdiscourse.com";
    ViewBag.pageKeywords = "Development news, International Breaking News, energy news,urban development news,transport news,economy news,finance news,sports news,art and culture news,education news,latest news,Agro-Forestry, Social Protection,Public Administration, Water and Sanitation, Health News";
    var newsImage = imageUrl.IndexOf("devdiscourse.blob.core.windows.net") != -1 ? imageUrl : string.Concat(domainUrl, imageUrl);
    ViewBag.PageImage = newsImage;
}
@section headerScripts{
    <script async custom-element="amp-form" src="https://cdn.ampproject.org/v0/amp-form-0.1.js"></script>
    <script async custom-element="amp-bind" src="https://cdn.ampproject.org/v0/amp-bind-0.1.js"></script>
    <script async custom-element="amp-carousel" src="https://cdn.ampproject.org/v0/amp-carousel-0.1.js"></script>
    <script async custom-element="amp-analytics" src="https://cdn.ampproject.org/v0/amp-analytics-0.1.js"></script>
    <script async custom-element="amp-list" src="https://cdn.ampproject.org/v0/amp-list-0.1.js"></script>
    <script async custom-template="amp-mustache" src="https://cdn.ampproject.org/v0/amp-mustache-0.2.js"></script>
    <script async custom-element="amp-selector" src="https://cdn.ampproject.org/v0/amp-selector-0.1.js"></script>
}
@section customCss{
        *{box-sizing: border-box;}
        .single-news-post .title,.badge-title {
        font-weight: 500;
        font-size: 20px;
        margin: 0;
        line-height: 24px;
        }
        .ad{margin:20px 0}
        .single-news-post{

        padding-bottom: 10px;
        margin-bottom: 10px;
        border-bottom: 1px solid #ccc;
        }
        .single-news-post .title{
        font-weight:500;
        font-size:20px;
        margin:0;
        line-height:24px;
        }
        .single-news-post .country{color:#666;margin:0;}
        .single-news-post .post-image,.single-news-post .post-content{display: table-cell;
        vertical-align: top;}
        .single-news-post .post-image{padding-right: 10px;}
        .more-btn{text-decoration: none;
        float: right;
        color: #222;
        background-color: #eee;
        padding: 2px 10px;
        border-color: #999;
        border-width: 2px 0;
        border-style: solid;
        margin-bottom:20px;
        margin-top:10px;
        clear:both;
        cursor: pointer;}
        .divider{height:50px;}
        div.scrollmenu {margin:10px 0; background-color: #fff;overflow: auto;white-space: nowrap;}
        div.scrollmenu span {display: inline-block;color: #333;text-align: center;padding: 14px;text-decoration: none;border-bottom:2px solid #fff;outline:0px;}
        div.scrollmenu span[selected] {border-bottom-color: #ff6a00;color: #ff6a00;}
        amp-selector [option][selected]{outline:0;}
    @*.blog-card {background-color:#fff;border-bottom:1px solid #eee;margin: 10px auto;}
        .blog-card .title{margin:0;padding:10px 20px;color:#222;border-bottom:1px solid #ddd;font-family:sans-serif;font-weight:400;line-height: 1.5;}
        .blog-card .read{margin:0;padding:10px 20px;color:#444;font-family:monospace;}
        .blogList{min-height:1000px;}
        .infocus-cover{height:270px;}
        amp-img.cover img{object-fit:cover;}
        amp-img.contain img{object-fit:contain;}
        .m-t-20{margin-top:20px;}
    *@
}
