@using Devdiscourse.Models;
@using X.PagedList
@model IPagedList<Devdiscourse.Models.Others.CampaignPetition>
@using X.PagedList.Mvc.Core
@{
    IPagedList<Devdiscourse.Models.Others.CampaignPetition> model = Model;
}
@using System.Text.RegularExpressions;
@{
    ViewBag.Title = "Pledges";
    Layout = "~/Views/Shared/_Layout _plain.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<link href="~/Content/admin.css" rel="stylesheet" />
<style>
    input, textarea, select {
        max-width: 100% !important;
    }
</style>
<div class="bg-white p-20">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Admin</a></li>
        <li class="breadcrumb-item active"><a href="@Url.Action("Pledges", "Campaign")">Pledges</a></li>
    </ol>
    <table class="table">
        <tr>            
            <th>Full Name</th>
            <th>Email</th>
            <th>Pledge Type</th>
            <th>CreatedOn</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
        
            <td>
                @Html.DisplayFor(modelItem => item.PledgeType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>            
        </tr>
        }
    </table>
    <div class="panel-footer" style="padding-top: 20px; background-color: transparent; border-top: none;">
        <small>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</small>
        @Html.PagedListPager(Model, page => Url.Action("Pledges", "Campaign", new {  page }))
    </div>
</div>