@model Devdiscourse.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
<style>
    .inputBox {
        font-size: 16px !important;
        height: 40px !important;
    }
</style>
<div class="container">
    <div class="row" style="margin-top:5%;margin-bottom:3%">
        <div class="col-md-offset-4 col-md-4 col-sm-12 col-xs-12">
            <div class="row bg-white border round-corner">
                <div class="col-md-12" style="padding:20px">
                    <h4 class="text-muted text-uppercase text-center m-t-20 m-b-20 f-20">@ViewBag.Title</h4>
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Code)
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control inputBox", @placeholder="Enter your email" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control inputBox", @placeholder = "Enter your password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control inputBox", @placeholder = "Enter confirm password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" class="btn btn-primary btn-block" value="Reset" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
