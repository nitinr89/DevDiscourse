@{
    string domainUrl = "https://www.devdiscourse.com";
    ViewBag.Title = "Green Urbanism (GU) - The 3rd International Conference | Devdiscourse";
    ViewBag.webEdition = ViewBag.region;
    ViewBag.alternateHeadline = "Green Urbanism (GU) - The 3rd International Conference";
    ViewBag.pageType = "webpage";
    string imageUrl = "/images/mediapartners/green_urbanism_cover.jpg?width=920";
    ViewBag.PageImage = string.Concat(domainUrl, imageUrl);
    ViewBag.PostUrl = "https://www.devdiscourse.com/events/green-urbanism";
    ViewBag.pageKeywords = "Green Urbanism, GU, Università degli Studi di Roma, 3rd International Conference, Rome, Italy";
    ViewBag.PageDescription = "The 3rd International Conference “Green Urbanism (GU)” will be held this year (2019) in association with Università degli Studi di Roma \"Tor Vergata\" in Rome, Italy.";

}
<style>
    .renderBody {
        margin: 0;
    }

    .fg-color {
        color: #133100;
    }

    .bg-color {
        background-color: #133100;
    }

    .bg-secondary {
        background-color: #2e9e02;
    }

    .fg-secondary {
        color: #2e9e02;
    }

    .why-abu {
        color: #133100;
        font-size: 28px;
        font-weight: 500;
    }


    .banner-content-container {
        padding: 100px 50px 100px 100px;
    }

    .bg-container {
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        background-image: -webkit-radial-gradient(center center, ellipse farthest-corner,rgb(101, 189, 39) 0%,rgb(46, 158, 2) 45.1%);
        background-image: radial-gradient(ellipse farthest-corner at center center,rgb(101, 189, 39) 0%,rgb(46, 158, 2) 45.1%);
    }

    .f-40 {
        font-size: 50px;
        font-weight: 600;
    }

    .font-sans-serif {
        font-family: sans-serif;
    }

    .f-20 {
        font-size: 20px;
    }
    .logo-container{
        text-align:right;
    }
    .news-container {
        background-color: #2e9e02;
        margin-top: 30px;
        margin-bottom: 20px;
        padding-bottom: 30px;
        color: #fff;
    }
    .seperator {
        margin: 30px auto;
        width: 70%;
        height: 7px;
        background-color: #ffe926;
    }
    .mid-container {
        background-color: #2e9e02;
        color: #fff;
        box-shadow: 0 -3px 6px 0 rgba(0, 0, 0, 0.34);
    }

    .btn-css {
        background-color: #ffe926;
        color: #133100;
        margin-top: 40px;
        font-size: 24px;
        font-weight: 500;
        padding: 10px 30px;
        font-family: sans-serif;
        border-radius: 30px;
        box-shadow: 0 15px 30px 0 rgba(8, 31, 62, 0.25);
    }

        .btn-css:active {
            background-color: #eeda2b;
            color: #133100;
        }

    btn-css:visited {
        color: #133100;
    }

    .btn-css:hover {
        background-color: #d3be04;
        color: #133100;
    }

    nav.navscrollmenubar {
        overflow-x: auto;
        overflow-y: hidden;
        white-space: nowrap;
        z-index: 500;
        text-align: center
    }

        nav.navscrollmenubar .item {
            display: inline-block
        }

        nav.navscrollmenubar .dropdown {
            float: right
        }

    .item-right {
        float: right
    }

    nav.navscrollmenubar .linkBtn {
        display: inline-block;
        text-align: center;
        padding: 14px 17px;
        text-decoration: none;
        text-transform: uppercase;
        color: #fff;
        font-size: 18px;
        font-family: 'Oswald',sans-serif
    }

    .event-news {
        height: 240px;
        background-repeat: no-repeat;
        background-size: cover
    }

    .eventcard-title {
        height: 90px;
        color: #222;
        background-color: #fff;
        font-stretch: condensed;
        font-size: 14px;
        padding: 10px;
    }

    .loadMoreButton {
        font-size: 16px;
        color: #222;
        background-color: #fff;
        display: block;
        line-height: 30px;
        text-align: center;
        cursor: pointer;
        padding: 10px;
        border: 1px solid #eee;
    }

    @@media (max-width: 2560px) and (min-width: 1500px) {
        .content-container {
            width: 1100px !important;
        }
    }

    @@media(max-width:1440px) {
        .eventcard-title {
            height: 100px;
        }

        .banner-content-container {
            padding: 70px 50px;
        }

        .f-40 {
            font-size: 40px;
        }
        .btn-css {
            font-size: 20px;
        }

    }


    @@media screen and (max-width:1200px) {
        nav.navscrollmenu .dropdown, .item-right {
            float: none
        }
    }

    @@media(max-width:1024px) {
        .eventcard-title {
            height: 110px;
        }
    }

    @@media screen and (max-width:768px) {
        .bg-container {
            background-size: contain;
            background-repeat: no-repeat;
            background-position: top;
        }
        .f-40 {
            font-size: 50px;
        }
        .logo-container {
            text-align: center;
        }
        nav.navscrollmenu {
            padding-left: 35px
        }

        .eventcard-title {
            height: 120px;
        }

        h2 {
            font-size: 22px;
        }
    }

    @@media screen and (max-width:425px) {
        .banner-content-container {
            padding: 40px 20px;
        }

        .why-abu {
            margin-top: 30px;
        }

        .btn-css {
            margin-top: 20px;
            font-size: 18px;
            padding: 10px 20px;
        }

    }
</style>
<h1 class="hidden">Devdiscourse: International Development News</h1>
<div class="bg-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center banner-content-container">
                <div class="f-20 font-sans-serif fg-white m-t-20">
                    Devdiscourse is proud media partner of<br class="hidden-xs hidden-sm" />
                    3rd international conference
                </div>
                <div class="seperator"></div>
                <a href="https://www.ierek.com/events/green-urbanism-3rd-edition" target="_blank" class="text-decoration">
                    <div class="f-40 m-t-30 m-b-30 fg-color font-sans-serif">
                        Green Urbanism (GU)
                    </div>
                </a>
                <div class="seperator"></div>
                <div class="f-20 m-t-10 fg-white font-sans-serif">December 11-13, 2019 | Rome, Italy</div>
                <a href="https://www.ierek.com/speaker/98" target="_blank" class="btn btn-css">BECOME A SPEAKER</a>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="logo-container p-t-30 p-b-20">
                    <img src="~/images/mediapartners/green_urbanism_banner_logo.svg" width="500" style="max-width:100%;" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="mid-container">
    <div class="container">
        <nav class="navscrollmenubar">
            <div class="item">
                <a href="https://www.ierek.com/events/green-urbanism-3rd-edition#conferencetopics" target="_blank" class="linkBtn" title="Conference Topics">CONFERENCE TOPICS</a>
            </div>
            <div class="item">
                <a href="https://www.ierek.com/events/green-urbanism-3rd-edition#importantdates" target="_blank" class="linkBtn" title="Important Dates">IMPORTANT DATES</a>
            </div>
            <div class="item">
                <a href="https://www.ierek.com/events/green-urbanism-3rd-edition#conferencefees" target="_blank" class="linkBtn" title="Conference Fees">CONFERENCE FEES</a>
            </div>
            <div class="item">
                <a href="https://www.ierek.com/events/green-urbanism-3rd-edition#conferencevenue" target="_blank" class="linkBtn" title="Conference Venue">CONFERENCE VENUE</a>
            </div>
            <div class="item">
                <a href="https://www.ierek.com/events/green-urbanism-3rd-edition#conferenceprogram" target="_blank" class="linkBtn" title="Conference Program">CONFERENCE PROGRAM</a>
            </div>
            <div class="item">
                <a href="https://www.ierek.com/events/green-urbanism-3rd-edition#scientific_committee" target="_blank" class="linkBtn" title="Scientific Committee">SCIENTIFIC COMMITTEE</a>
            </div>
        </nav>
    </div>
</div>
<div class="container m-t-30">
    <div class="row m-t-20">
        <div class="col-xs-12 col-sm-12 col-md-6">
            <img src="~/images/mediapartners/about_green_ubanism_conference.jpg"  style="max-height:370px" class="img-responsive center-block m-b-30" alt="About Green Urbanism" />
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6">
            <div class="why-abu font-sans-serif text-uppercase"><b>About Conference</b></div>
            <div class="content text-muted font-sans-serif f-16">
                <p class="m-t-20">Following the success of the previous editions launched in 2016 and 2018. The 3rd International Conference “Green Urbanism (GU)” will be held this year (2019) in association with Università degli Studi di Roma "Tor Vergata" in Rome, Italy.</p>
                <p>The conference aims to achieve sustainability and resilience of urban environments as those are the key challenges of our time. This conference is a way to deal with limited resources as well as the need for adaptation to the effects of a changing climate and urban environments as they are increasingly questioning the sustainability and resilience of urban environments and infrastructure systems.</p>
                <p>The world is in the midst of a disturbance of a growing, consuming population, and environmental degradation, which produces many environmental challenges such as global climate change, excessive fossil fuel dependency and the growing demand for energy, all likely to be major challenges and ones of the greatest problems facing humanity nowadays.<br /><a href="https://www.ierek.com/events/green-urbanism-3rd-edition#introduction" target="_blank" style="color:#234e5e">Read More</a></p>
            </div>
        </div>
    </div>
</div>
<div class="news-container">
    <div class="p-t-30 container content-container">
        <h2 class="font-sans-serif">EVENT NEWS</h2>
        <div>
            <div id="moreEventNews">
                @* @{ Html.RenderAction("EventNews", "Events", new { id = "25", skip = 0, take = 5 });} *@
                @await Component.InvokeAsync("EventNews", new { id = "25", skip = 0, take = 5 });
            </div>
            <div class="text-center loadmore f-16" style="display:none;"><span class="fa fa-circle-o-notch fa-spin fa-fw"></span>Loading</div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            var _skip = 0;

            $('.lazy').lazy();
            $(document).find('#regDropDown').change(function () {
                var date = new Date();
                date.setTime(date.getTime() + (24 * 60 * 60 * 1000));
                document.cookie = "Edition=" + $(this).val() + "; expires=" + date.toGMTString();
                window.location.href = $(this).find('option:selected').attr('data-to');
            });
            $(document).on("click", ".load_more", function () {
                $(this).remove();
                $('.loadmore').show();
                _skip = _skip + 6;
                $.ajax("/Events/GetEventNews?id=25&skip=" + _skip + "&take=6").done(function (data) { $('#moreEventNews').append(data); $('.loadmore').hide(); });
            });
        });
    </script>
}