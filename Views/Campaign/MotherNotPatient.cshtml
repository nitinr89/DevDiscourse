@section scripts {
    <script>
        $(document).ready(function () {
            $(document).find('#regDropDown').change(function () {
                var date = new Date();
                date.setTime(date.getTime() + (24 * 60 * 60 * 1000));
                document.cookie = "Edition=" + $(this).val() + "; expires=" + date.toGMTString() + "; path=/";
                window.location.href = $(this).find('option:selected').attr('data-to');
            });
            $('#pledgeInput').change(function () {
                $('#pledgeHtml').html($('#pledgeInput :selected').attr('data-text'));
            });
            function showAlert(e, t) {
                $.notify({
                    message: e
                }, {
                    type: t,
                    delay: 1e3,
                    placement: {
                        from: "top",
                        align: "right"
                    }
                });
            }
            $('#submit_petition').click(function () {
                var p_pledge = $('#pledgeInput').val();
                var p_first_name = $('#p_first_name').val();
                var p_last_name = $('#p_last_name').val();
                var p_email = $('#p_email').val();
                if (p_first_name.trim() == "") {
                    return;
                } else if (!(/^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(p_email))) {
                    console.log('email not valid');
                    return;
                }
                postPetition(p_pledge, p_first_name, p_last_name, p_email);
            });
            function postPetition(p_pledge, p_first_name, p_last_name, p_email) {
                $.post('/api/Campaign/PostPetition', { Firstname: p_first_name, LastName: p_last_name, Email: p_email, PledgeType: p_pledge }, function (data) {
                    if (data == "Success") {
                        showAlert("Success", "success");
                        $('#p_first_name,#p_last_name,#p_email').val('');
                    } else if (data == "AlreadyExist") {
                        showAlert("Email already exists!", "warning");
                    } else if (data == "AlreadyExist") {
                        showAlert("Something went wrong!", "danger");
                    }
                });
            }
        });
    </script>
}

