@model Devdiscourse.Models.ViewModel.EmailFormModel
@{
	ViewBag.Title = "About Us | Brand - Devdiscourse";
	string domainUrl = "https://www.devdiscourse.com";
	string imageUrl = "/AdminFiles/Logo/devediscourse_banner.png";
	ViewBag.PageDescription = "International Development News, Breaking News, Technology News, Business News, Sports News, Science News, Entertainment News and Political News";
	ViewBag.PageImage = string.Concat(domainUrl, imageUrl);
	ViewBag.PostUrl = "https://www.devdiscourse.com/aboutus";
	ViewBag.webEdition = ViewBag.edition;
	ViewBag.pageKeywords = "About Us, International Development News, Devdiscourse";
}
<style>
	input, select, textarea {
		max-width: 100%
	}

	ol {
		font-size: 16px
	}

	.input-margin10 {
		margin-top: 10px
	}

	.send-btn {
		background-color: #ff9c46;
		color: #fff;
		border-radius: 0
	}

	.btn.focus, .btn:focus, .btn:hover {
		background-color: #dc761d;
		color: #fff !important
	}

	.media-left div {
		width: 50px;
		text-align: center
	}

	.media-body {
		padding-left: 20px
	}

	.message-textarea {
		min-height: 120px
	}

	.custom-input {
		border-width: 0 0 1px;
		border-bottom: 1px solid #999 !important;
		background-color: transparent;
		box-shadow: none !important;
		color: #eee;
		border-radius: 0;
		outline-color: transparent
	}

	.box-shadow {
		box-shadow: 0 4px 8px 0 rgba(0,0,0,.2),0 6px 20px 0 rgba(0,0,0,.19)
	}

	.icon-color {
		color: #f5f5f5;
		font-size: 1.5em;
		padding-top: 10px
	}

	#social-icon-container {
		text-align: center;
		padding: 20px 0
	}

	.social-icon {
		font-size: 2.2em;
		padding: 10px;
		color: #4d4d4d
	}

	.my-iframe {
		height: 370px
	}

	.ad-form {
		margin-top: -225px;
		padding: 80px 40px
	}

	.field-validation-error {
		color: #ff9c46
	}

	.about-banner-container {
		margin-top: -25px;
		background-color: #f1ded0
	}

	#abt_vri {
		padding-top: 40px;
	}

	#adWithUs {
		padding-top: 70px;
		padding-bottom: 70px
	}

	.team-tile {
		height: 280px;
		box-shadow: 0 2px 2px 0 rgba(0,0,0,.16),0 0 0 1px rgba(0,0,0,.08);
		padding: 8px
	}

	.profile-img {
		margin-top: 20px;
		margin-bottom: 20px;
		height: 160px;
		width: 160px;
		background-repeat: no-repeat;
		background-size: cover;
		border-radius: 50%
	}

	.no-padding-right {
		padding-right: 0;
	}

	@@media(max-width:1024px) {

		.profile-img {
			height: 150px;
			width: 150px
		}
	}

	@@media(max-width:768px) {


		.my-iframe {
			height: 300px
		}

		.team-tile {
			height: 240px
		}

		.profile-img {
			height: 120px;
			width: 120px
		}

		.ad-form {
			padding: 60px 30px
		}
	}

	@@media(max-width:425px) {
		.message-textarea {
			min-height: 80px
		}

		.my-iframe {
			height: 300px
		}

		.ad-form {
			margin-top: 0;
			padding: 35px 20px
		}

		.about-banner-container {
			margin-top: -10px
		}

		#abt_vri {
			padding-top: 60px
		}

		.team-tile {
			height: 220px;
			padding: 5px
		}

		.profile-img {
			height: 120px;
			width: 120px;
			margin-top: 15px;
			margin-bottom: 15px
		}

		.f-20 {
			font-size: 17px !important
		}

		.f-18 {
			font-size: 15px !important
		}

		select.input-lg {
			height: 26px !important
		}

		#submitBtn {
			font-size: 1em;
			padding: 6px 12px
		}

		#adWithUs {
			padding-top: 35px;
			padding-bottom: 35px
		}
	}

	@@media(max-width:320px) {
		.team-tile {
			height: 175px;
			padding: 4px
		}

		.profile-img {
			margin-bottom: 10px;
			margin-top: 10px;
			width: 100px;
			height: 100px
		}

		.f-18 {
			font-size: 14px
		}

		.member-name {
			font-size: 15px;
			margin-bottom: 5px
		}

		.member-desig {
			font-size: 12px
