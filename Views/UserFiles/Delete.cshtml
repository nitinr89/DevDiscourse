@model Devdiscourse.Models.BasicModels.UserFiles

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout _plain.cshtml";
}
<link href="~/Content/admin.css" rel="stylesheet" />
<div class="bg-white p-20">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Admin</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "UserFiles")">Image Gallery</a></li>
        <li class="breadcrumb-item active">Delete</li>
    </ol>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FileUrl)
            </dt>

            <dd>
                <img src="@Html.DisplayFor(model => model.FileUrl)" style="height:70px; width:70px" />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FileMimeType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FileMimeType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FileSize)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FileSize)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedOn)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ModifiedOn)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
