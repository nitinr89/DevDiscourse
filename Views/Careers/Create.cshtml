@section scripts {
    <script>
        $(document).ready(function () {
            $(document).find('#regDropDown').change(function () {
                var date = new Date();
                date.setTime(date.getTime() + (24 * 60 * 60 * 1000));
                document.cookie = "Edition=" + $(this).val() + "; expires=" + date.toGMTString();
                window.location.href = $(this).find('option:selected').attr('data-to');
            });
            $('.JoinUsBtn').click(function () {
                var jobId = $(this).attr('data-job-id');
                var jobTitle = $(this).attr('data-job-title');
                $('#JobId').val(jobId);
                $('#JobTitle').val(jobTitle);
                $('#applyfor').html('<div class="alert alert-success"><button type="button" class="close removeApplyFor" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><strong>Apply for:</strong> ' + jobTitle + '</div>');
            });
            $(document).on('click', ".removeApplyFor", function () {
                $('#JobId').val('');
                $('#JobTitle').val('');
            })
        });
    </script>
