@model Devdiscourse.Models.Others.CommonEvent

@{
    ViewBag.Title = Model.Name;
    string domainUrl = "https://www.devdiscourse.com";
    string imageUrl = @Model.BackgroundBannerUrl ?? "";
    var eventImage = imageUrl.IndexOf("devdiscourse.blob.core.windows.net") != -1 ? $"/Experiment/Img?imageUrl={imageUrl}&width=1280" : "/Experiment/Img?imageUrl=" + string.Concat(domainUrl, imageUrl) + "&width=1280";
    ViewBag.PageDescription = @Model.ShortDescription;
    ViewBag.PageImage = string.Concat(domainUrl, eventImage);
    ViewBag.webEdition = ViewBag.region;
    ViewBag.PostUrl = "https://www.devdiscourse.com/media-partner-event/" + Model.GenerateSecondSlug();
    ViewBag.pageKeywords = @Model.PageKeywords;
    var LogoImage = Model.LogoUrl;
}
<style>
    .renderBody {
        margin-top: 0px;
    }

    .gard {
        background-color: #2e2e2e;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center top;
        padding-top: 80px;
        padding-bottom: 60px;
        color: #fff;
    }

    .font-sans-serif {
        font-family: sans-serif;
    }

    .ev-date {
        background-color: #fff;
        color: #222;
        padding: 3px 10px;
        display: inline-block;
    }

    .why-abu {
        color: #39A8DF;
        font-size: 28px;
        font-weight: 500;
    }

    .fg-theme {
        color: #e45914;
    }

    .btncss {
        color: #fff;
        background-color: #23A8E0;
        font-size: 18px;
        font-weight: 500;
        border: 0;
        border-radius: 0px;
        padding: 10px 45px;
        box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.14);
    }

        .btncss:hover {
            color: #fff;
            background-color: #2A3053;
        }

    .news-container {
        background-color: #e45914;
        margin-top: 30px;
        padding-bottom: 30px;
        color: #fff;
    }

    .mid-container {
        background-color: #0C2235;
        color: #fff;
        box-shadow: 0 -3px 6px 0 rgba(0, 0, 0, 0.34);
    }

    .bg-white.p-t-20 {
        padding: 0;
    }

    nav.navscrollmenubar {
        overflow-x: auto;
        overflow-y: hidden;
        white-space: nowrap;
        z-index: 500;
        text-align: center
    }

        nav.navscrollmenubar .item {
            display: inline-block
        }

        nav.navscrollmenubar .dropdown {
            float: right
        }

    .item-right {
        float: right
    }

    nav.navscrollmenubar .linkBtn {
        display: inline-block;
        text-align: center;
        padding: 14px 17px;
        text-decoration: none;
        text-transform: uppercase;
        color: #fff;
        font-size: 18px;
        font-family: 'Oswald',sans-serif
    }

    .event-news {
        height: 240px;
        background-repeat: no-repeat;
        background-size: cover
    }

    .eventcard-title {
        height: 90px;
        color: #222;
        background-color: #fff;
        font-stretch: condensed;
        font-size: 14px;
        padding: 10px;
    }

    .loadMoreButton {
        font-size: 16px;
        color: #222;
        background-color: #fff;
        display: block;
        line-height: 30px;
        text-align: center;
        cursor: pointer;
        padding: 10px;
        border: 1px solid #eee;
    }

    .f-40 {
        font-size: 56px;
        font-weight: 600;
    }

    .f-30 {
        font-size: 30px;
        font-weight: 500;
    }

    @@media (max-width: 2560px) and (min-width: 1500px) {
        .content-container {
            width: 1100px !important;
        }
    }

    @@media(max-width:1440px) {
        .eventcard-title {
            height: 100px;
        }

        .banner-content-container {
            padding: 70px 50px;
        }

        .text-five {
            font-size: 200px;
        }

        .text-go-green {
            font-size: 43px;
        }

        .remedies {
            font-size: 18px;
        }
    }


    @@media screen and (max-width:1200px) {
        nav.navscrollmenu .dropdown, .item-right {
            float: none
        }
    }

    @@media(max-width:1024px) {
        .eventcard-title {
            height: 110px;
        }
    }

    @@media screen and (max-width:768px) {


        .media-partner {
            text-align: center;
        }

        .logo-container {
            text-align: center;
        }

        nav.navscrollmenu {
            padding-left: 35px
        }

        .eventcard-title {
            height: 120px;
        }

        h2 {
            font-size: 22px;
        }

        .f-40 {
            font-size: 36px;
        }

        .f-20 {
            font-size: 18px;
        }

        .gard {
            padding: 0;
        }
    }

    @@media screen and (max-width:425px) {
        .banner-content-container {
            padding: 40px 20px;
        }

        .renderBody {
            margin-top: -10px;
        }

        .text-five {
            font-size: 160px;
            margin-top: 20px;
            text-align: center;
        }

        .text-go-green {
            font-size: 25px;
            text-align: center;
        }

        .text-slogan {
            font-size: 18px;
            text-align: center;
        }

        .remedies {
            font-size: 16px;
            text-align: center;
        }

        .why-abu {
            margin-top: 30px;
        }

        .gard .media-left, .gard .media-body {
            display: block;
            width: 100%;
        }

        .gard .media-left {
            padding-bottom: 20px;
        }

        .f-40 {
            font-size: 30px;
        }

        .f-20 {
            font-size: 16px;
        }

        .btncss {
            font-size: 12px;
        }
    }
</style>

<script type="application/ld+json">
    {
    "@@context": "https://schema.org",
    "@@type": "Event",
    "name": "@Model.Name",
    "startDate": "@Model.StartDate",
    "endDate": "@Model.EndDate",
    "location": {
    "@@type": "Place",
    "name": "@Model.Name",
    "address": {
    "@@type": "PostalAddress",
    "streetAddress": "@Model.StreetAddress",
    "addressLocality": "@Model.AddressLocality",
    "postalCode": "@Model.PostalCode",
    "addressRegion": "@Model.AddressRegion",
    "addressCountry": "@Model.AddressCountry"
    }
    },
    "image": [
    "@Model.Image"
    ],
    "description": "@Model.Description",
    "offers": {
    "@@type": "Offer",
    "url": "@Model.Url",
    "price": "@Model.Price",
    "priceCurrency": "@Model.PriceCurrency",
    "availability": "@Model.AvailabilityUrl",
    "validFrom": "@Model.ValidFrom"
    }
    }
</script>


<div class="gard" style="background-image:url(@eventImage)">
    <div class="container font-sans-serif p-t-50 p-b-20">
        <div>
            <p class="f-20">Devdiscourse is proud media partner of </p>
            <h1 class="f-40">
                @Model.EventTitle
            </h1>
            <p class="f-30">
                @Html.Raw(Model.EventVenue)
            </p>
            <div class="p-t-20 m-t-50 m-b-30">
                <a href=@Model.RegistrationUrl target="_blank" class="btn btn-default btn-lg btncss">Click here to Register</a>
            </div>
        </div>
    </div>
</div>
<div class="mid-container">
    @if (Model != null && Model.EventNavLinks != null)
    {

        <div class="container">
            <nav class="navscrollmenubar">
                @foreach (var link in Model.EventNavLinks)
                {
                    <div class="item"><a href=@link.Href target="_blank" class="linkBtn" title=@link.Title>@link.Label</a></div>
                }
            </nav>
        </div>
    }
</div>
<div class="container m-t-30">
    <div class="row m-t-20 m-b-20">
        <div class="col-xs-12 col-sm-12 col-md-6">
            @{
                var LogoImageUrl = imageUrl.IndexOf("devdiscourse.blob.core.windows.net") != -1 ? $"/Experiment/Img?imageUrl={imageUrl}&width=400&height=240&bgcolor=white" : "/Experiment/Img?imageUrl=" + string.Concat(domainUrl, imageUrl) + "&width=400&height=240&bgcolor=white";
            }
            <img src="@LogoImageUrl" class="img-responsive" width="400" height="240" />
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6">
            <div class="why-abu font-sans-serif text-uppercase ">
                <b>
                    Why Attend ?
                </b>
            </div>
            <div class="content text-muted font-sans-serif f-16">
                <p class="m-t-20">
                    @Html.Raw(Model.Content)
                </p>
            </div>
        </div>
    </div>
</div>
