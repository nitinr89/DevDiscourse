@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout _plain.cshtml";
}
<link href="~/Content/admin.css" rel="stylesheet" />
<div class="bg-white p-20">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Admin</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "AssignRole")">Assigned Role</a></li>
        <li class="breadcrumb-item">Delete</li>
    </ol>
    <div class="container">
        <h4> Are you sure you want to delete it</h4>
        <div class="row m-t-30">
            <div class="col-md-2">
                <label class="control-label">User</label>
            </div>
            <div class="col-md-10">
                @ViewBag.user
            </div>
        </div>
        <div class="row m-t-20">
            <div class="col-md-2">
                <label class="control-label">Role</label>
            </div>
            <div class="col-md-10">
                @ViewBag.role
            </div>
        </div>
        <div class="m-t-20 col-md-offset-2">
            <button class="btn btn-primary" id="deleteRole">Delete</button>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var _userId = '@(ViewBag.id)';
            var _delRole = '@(ViewBag.role)';
            
            $('#deleteRole').click(function () {
                $.ajax({
                    url: '/Role/DeleteRole',
                    type: 'Post',
                    data: { userId: _userId, role: _delRole },
                    dataType: 'Json',
                    success: function (data) {
                        window.location.href = "/AssignRole/Index";
                    },
                    error: function () {
                    },
                });
            });
        });
    </script>
}




