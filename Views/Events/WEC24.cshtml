@{
    string domainUrl = "https://www.devdiscourse.com";
    ViewBag.Title = "World Energy Congress | Devdiscourse";
    ViewBag.webEdition = ViewBag.region;
    ViewBag.alternateHeadline = "Power Week Africa - Powering Tomorrow's Energy Needs";
    ViewBag.pageType = "webpage";
    string imageUrl = "/images/mediapartners/event_wec24.jpg";
     ViewBag.PageImage = string.Concat(domainUrl, imageUrl);
    string pageUrl = "/events/world-energy-congress";
    ViewBag.PostUrl = string.Concat(domainUrl, @pageUrl);
    ViewBag.pageKeywords = "World Energy Congress";
    ViewBag.PageDescription = "World Energy Congress: Following a successful international bid that was won by the UAE Ministry of Energy, the Congress in Abu Dhabi is envisioned to be the most successful edition since the event’s inception in 1924.";
