@model IdentityRole
@{
    ViewBag.Title = "Add New Role";
    Layout = "~/Views/Shared/_Layout _plain.cshtml";
}
<link href="~/Content/admin.css" rel="stylesheet" />
<div class="container bg-white m-t-10 m-b-10 p-b-10 p-t-10">
    <ol class="breadcrumb no-margin">
        <li class="breadcrumb-item"><a href="@Url.Action("AdminView", "Admin")">Admin</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Role")">Role</a></li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
</div>
<div class="container bg-white m-b-10">
    @using (Html.BeginForm())
    {
        <div class="form-horizontal p-20">
            <div class="form-group">
                <label class="control-label col-md-2">User Role</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create Role" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

